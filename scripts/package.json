{
  "name": "tabiat-rehberi-generator",
  "version": "1.0.0",
  "description": "İçerik üretim scriptleri - Groq API ile otomatik sayfa oluşturma",
  "type": "module",
  "scripts": {
    "detect-qids": "node wikidata-qid-detector.js",
    "fetch-wikipedia": "node fetch-master-lists.js",
    "fetch-wikidata": "node fetch-wikidata.js",
    "fetch-dkmp": "node fetch-dkmp-official.js",
    "fetch-all": "npm run fetch-wikipedia && npm run fetch-wikidata && npm run fetch-dkmp",
    "merge-sources": "node merge-sources.js",
    "add-manual": "node add-manual-area.js",
    "import-csv": "node import-from-csv.js",
    "generate": "node generate-content.js",
    "generate:test": "node generate-content.js --test --limit=10",
    "validate": "node validate-content.js",
    "review-queue": "node show-review-queue.js",
    "full-pipeline": "npm run fetch-all && npm run merge-sources && npm run generate:test"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "groq-sdk": "^0.3.2",
    "axios": "^1.6.2",
    "js-yaml": "^4.1.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {},
  "author": "Tabiat Rehberi",
  "license": "MIT"
}
